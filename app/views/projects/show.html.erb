<%= provide(:title, @project.title) %>
<div class="about-container">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <%= render 'layouts/gallery', project: @project %>
        </div>
        <div class="project-info col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <h1> <%= @project.title %> </h1>
          <div class="project-description">
            <% @project.description.split('.').each do |sentence| %>
              <p> <%= sentence %> </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>