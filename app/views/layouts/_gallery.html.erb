<div class="gallery">
  <%= image_tag project.screenshots.first.image_url, :id => "featured-shot" %>
  

  <div id="thumbnails" >
    <% @project.screenshots.each do |shot| %>
      <%= image_tag shot.image_url, :class => "thumbnail-shot" %>
    <% end %>
    <span class="stretch"></span>
  </div>
</div>

<script type="text/javascript">

  var thumbs = $(".thumbnail-shot");
  thumbs.first().addClass("selected");
  $(function() {
    $(".thumbnail-shot").click(function() {
      if (!$(this).hasClass("selected")) {
        thumbs.removeClass("selected");
        $(this).addClass("selected");
        var image = $(this).attr("src");
        if (!$('#featured-shot').is(":hidden")) {
          $('#featured-shot').hide();
          $('#featured-shot').fadeIn('slow');
        }
        $('#featured-shot').attr("src", image);
      }
      return false;
    });
  });
</script>